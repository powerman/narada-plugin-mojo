    <img src="[%= url_for add_mtime '/img/ajax-loader.gif' %]">
  </div>
  <div class="col-md-4" id="welcome-backbone">
    <script type="text/template" id="tmpl-welcome">
    <%= message %>
    </script>
  </div>
</section>
